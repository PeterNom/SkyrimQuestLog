@model Quest

<h2>Delete Appointment @Model?.QuestName</h2>
<hr />

@if (ViewData["ErrorMessage"] != null)
{
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="QuestId"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.QuestId
        </dd>
        <dt class="col-sm-2">
            <label asp-for="QuestName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.QuestName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="QuestDescription"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.QuestDescription
        </dd>

    </dl>
</div>

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="QuestId" />
    <input type="submit" value="Delete quest" class="btn btn-danger"
           onclick="javascript: return confirm('Are you sure you want to delete this quest?');" />
</form>

<div>
    <a asp-controller="Quest" asp-action="Index">Back to overview</a>
</div>